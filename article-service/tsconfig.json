{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strict": true
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules", "**/*.spec.ts"],
  "watchOptions": {
    "excludeDirectories": ["dist", "node_modules"]
  }
}
